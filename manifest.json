{
  "manifest_version": 3,
  "name": "Notes Extension",
  "version": "1.0",
  "description": "A Chrome extension for taking notes",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon.png"
    }
  },
  "icons": {
    "48": "icons/icon.png"
  }
}
